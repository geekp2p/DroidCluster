git remote add origin https://github.com/geekp2p/DroidCluster.git
git fetch origin
; git checkout -b main origin/main


git remote add origin https://github.com/geekp2p/DroidCluster.git


git clone https://github.com/geekp2p/DroidCluster.git

git pull origin main

git remote -v

git pull origin main
git commit -m "Resolved merge conflicts"
git push -u origin main


git add .
git commit -m "remove test"
git push -u origin main

git push -u origin main --force

git add .
git commit -m "alot update"
git push -u origin main

sudo apt-get install -y curl netcat-openbsd

sudo apt install make

make up


docker exec -it pf_emulator  ip addr show eth0
docker exec -it pf_droidflow ip addr show eth0

# ขึ้นระบบ + โชว์ปลายทางที่เข้าถึงได้ (noVNC/VNC/ADB/Flask)
make up

# ดูปลายทางอีกรอบ (สคริปต์ tools/show-endpoints.sh)
make ps

# ดู log สด ๆ ของทุกคอนเทนเนอร์
make logs

# ปิดระบบ
make down


# Restart the adb server inside the emulator container
docker exec pf_emulator adb kill-server
docker exec pf_emulator adb start-server

# Verify the emulator is listed as “device” (not “offline”)
docker exec pf_emulator adb devices

# Check the container health again
docker inspect -f '{{.State.Health.Status}}' pf_emulator

docker compose up -d --force-recreate


# 1. ตั้ง remote ให้ชี้ไปที่ GitHub (ถ้ายังไม่ได้ตั้ง)
git remote add origin https://github.com/geekp2p/DroidCluster.git

# 2. ดึง commit ล่าสุดจาก GitHub ลงมา (เฉพาะ main)
git fetch origin main

# 3. รวม history (เลือกใช้ merge แบบ keep ทั้งสองฝั่ง)
git pull origin main --allow-unrelated-histories

# 4. แก้ conflict ถ้ามี (เปิดไฟล์แล้วแก้, จากนั้น)
git add .
git commit -m "merge local and remote history"

# 5. push ขึ้น GitHub พร้อมตั้งค่า upstream
git push -u origin main

git push -u origin main --force


cd ~/DroidCluster

# สตาร์ท emulator-only ก่อน
make up --profile emulator

# ตรวจสอบว่า healthy หรือยัง
make health

# เปิด UI
make emu-open   # http://localhost:6080
make pf-open    # http://localhost:5000


docker compose --profile usb --profile emulator up -d --build
